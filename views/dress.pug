extends layout

block content
 - let create = `dispatch(\"dress/create\")`
  button.btn(class="btn-success m1-1", onclick=create) Create
  h1= title
  - let dress=results;
  div(class="container-fluid mt-3")
   div(class="row m-1")
    each form in dress
     - let destination=`buy(\"/dress/update?id=${form._id}\")`
     - let detail=`buy(\"/dress/detail?id=${form._id}\")`
     - let del=`buy(\"/dress/delete?id=${form._id}\")`
     div(class="col-sm-6 bg-warning m-1 p-3") dress #{form.name} - #{form.cost} - #{form.brand}
      button.btn( class="btn-primary ml-2", onclick=destination ) Update
      button.btn( class="btn-dark ml-2", onclick=detail ) Get Detail
      button.btn( class="btn-danger ml-2", onclick=del ) Delete
  
   script.
    function buy(path){
        window.location.href=path

        //alert(`You purchased Item ${a+1}`)
      }